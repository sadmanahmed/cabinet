<h1>
  <%= @doc.title %>
</h1>
<p>
  <%= simple_format(@doc.content) %>
</p>
<%= link_to "All Docs",docs_path, class: "button" %>
<%= link_to "Fix Doc",edit_doc_path(@doc), class: "button" %>
<%= link_to "Trash It", doc_path(@doc),method: :delete,data: { confirm: "Are you Sure?" }, class: "button" %>
